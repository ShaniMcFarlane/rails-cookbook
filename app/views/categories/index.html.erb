<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('ban.jpeg') %>);">
  <div class="container">
    <h1>Cookbook</h1>
    <p>All your favorite recipes</p>
  </div>
</div>

<div class="cards-index">

  <div class="categories-card">
    <h2>Categories</h2>
    <%= link_to "Add New Category", new_category_path, class: "btn btn-warning" %>
  </div>

  <div class="cards-grid">
    <% @categories.each do |category| %>
      <div class="cards-info" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= link_to category.name, category_path(category), class: "category-link" %>
        <%= link_to "Delete", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "delete-link" %>
      </div>
    <% end %>
  </div>

</div>
